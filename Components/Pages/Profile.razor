@page "/profile"

<div style="padding: 20px; max-width: 600px; margin: 0 auto;">
    <h2 style="text-align: center; margin-bottom: 30px;">Student Profile</h2>

    <div style="background-color: #f5f5f5; padding: 30px; border-radius: 10px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
        <div style="text-align: center; margin-bottom: 20px;">
            <img src="@photoPath"
                 alt="Student Photo"
                 style="width: 200px; height: 200px; border-radius: 50%; object-fit: cover; border: 4px solid #007bff;" />
        </div>

        <div style="text-align: center;">
            <h3 style="color: #333; margin-bottom: 10px;">@studentName</h3>

            <p style="font-size: 1.1em; color: #555; margin: 10px 0;">
                <strong>Course:</strong> @courseName
            </p>

            <p style="font-size: 1.1em; color: #555; margin: 10px 0;">
                <strong>Batch Year:</strong> @batchYear
            </p>
        </div>
    </div>
</div>

@code {
    private string photoPath = "Images/Student.jpg";
    private string studentName = "Student Name";
    private string courseName = ".NET MAUI Hybrid Training";
    private string batchYear = "2025";
}